<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.industry.mapper.ApprovalSettingMapper">
    <insert id="insertBatch" parameterType="List">
        insert into construction_industry_api.t_approval_setting
        (role_id, sort, type, creator_id, gmt_create, regenerator_id, gmt_modified)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId}
            ,#{item.sort}
            ,#{item.type}
            ,#{item.creatorId}
            ,#{item.gmtCreate}
            ,#{item.regeneratorId}
            ,#{item.gmtModified})
        </foreach>
    </insert>
    <delete id="deleteBatch">
        delete
        from construction_industry_api.t_approval_setting
        where type = #{type}
    </delete>

    <select id="selectByType" resultType="Long" parameterType="Integer">
        select count(*)
        from construction_industry_api.t_approval_setting
        where type = #{type}
    </select>
</mapper>
