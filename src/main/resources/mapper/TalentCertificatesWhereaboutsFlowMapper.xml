<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.industry.mapper.TalentCertificatesWhereaboutsFlowMapper">

    <insert id="insertBatch" parameterType="List">
        insert into construction_industry_api.t_talent_certificates_whereabouts_flow(
        id
        ,talent_certificates_id
        ,certificates_whereabouts
        ,gmt_create
        ,creator_id
        ,remark)
        values
        <foreach collection="list" item="item" separator=",">
            (
            #{item.id}
            ,#{item.talentCertificatesId}
            ,#{item.certificatesWhereabouts}
            ,#{item.gmtCreate}
            ,#{item.creatorId}
            ,#{item.remark}
            )
        </foreach>
    </insert>
    <select id="listCertificatesWhereabouts"
            resultType="TalentCertificatesWhereaboutsFlowDO">
        select id,
               talent_certificates_id,
               certificates_whereabouts,
               gmt_create,
               creator_id,
               remark
        from construction_industry_api.t_talent_certificates_whereabouts_flow
        where talent_certificates_id = #{id}
    </select>
</mapper>
