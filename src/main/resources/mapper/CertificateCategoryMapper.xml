<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.industry.mapper.CertificateCategoryMapper">
    <insert id="insertCategory">
        insert into construction_industry_api.t_certificate_category
        values ( #{id}
               , #{gmtCreate}
               , #{gmtModified}
               , #{creatorId}
               , #{regeneratorId}
               , #{parentId}
               , #{categoryName}
               , #{sort})
    </insert>
    <select id="getDetailById" resultType="CertificateCategoryDO">
        select id,
               gmt_create,
               gmt_modified,
               creator_id,
               regenerator_id,
               parent_id,
               category_name,
               sort
        from construction_industry_api.t_certificate_category
        where id = #{id}
    </select>

</mapper>
