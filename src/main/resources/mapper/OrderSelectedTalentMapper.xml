<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.industry.mapper.OrderSelectedTalentMapper">

    <resultMap id="listSelectedTalentsMap" type="OrderSelectedTalentDO">
        <id column="id" property="id"/>
        <result column="talent_order_id" property="talentOrderId"/>
        <result column="is_confirmed" property="confirmed"/>
        <association property="talentOrder" select="selectTalentOrder" column="talent_order_id"/>
    </resultMap>
    <update id="updateConfirmById">
        update construction_industry_api.t_order_selected_talent
        set is_confirmed = 1
        where id = #{id}
    </update>
    <update id="updateContractBalanceByTalentId">
        update construction_industry_api.t_order_selected_talent
        set contract_balance = #{contractBalance}
        where talent_id = #{talentId}
    </update>

    <select id="selectTalentOrder" resultType="TalentOrderDO">
        select id,
               enterprise_id,
               orderno,
               enterprise_name,
               enterprise_demand_ids,
               order_status,
               order_demand,
               creator_id,
               gmt_create,
               regenerator_id,
               gmt_modified
        from construction_industry_api.t_talent_order
        where id = #{talent_order_id}
    </select>

    <select id="listSelectedTalents" resultMap="listSelectedTalentsMap" resultType="OrderSelectedTalentDO">
        select id,
               talent_order_id,
               enterprise_name,
               talent_id,
               area,
               class_three_personnel,
               level_major_initial_conversion,
               talent_price,
               talent_price_number,
               number_unit,
               enterprise_offer,
               enterprise_offer_number,
               enterprise_offer_unit,
               contract_balance,
               market_development_fee,
               market_development_fee_unit,
               is_confirmed,
               creator_id,
               gmt_create,
               regenerator_id,
               gmt_modified,
               full_name
        from construction_industry_api.t_order_selected_talent
        where is_confirmed = 0
    </select>
    <select id="getByTalentId" resultType="OrderSelectedTalentDO">
        select id
        from construction_industry_api.t_order_selected_talent
        where talent_id = #{talentId}
    </select>
</mapper>
